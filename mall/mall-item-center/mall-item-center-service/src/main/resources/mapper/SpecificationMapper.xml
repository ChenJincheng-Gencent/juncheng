<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.square.mall.item.center.service.dao.SpecificationDao">

    <resultMap id="SpecificationMap" type="com.square.mall.item.center.service.eo.SpecificationEo">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <sql id="need_column">
        `id`,
        `name`
    </sql>

    <!-- 动态查询 -->
    <sql id="select">
        <where>
            is_delete = 0
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name !=''">
                and name = #{name}
            </if>
        </where>
    </sql>

    <select id="selectSpecificationByCondition" resultMap="SpecificationMap">
        SELECT
        <include refid="need_column"/>
        FROM it_specification <include refid="select"/>
    </select>

    <insert id="insertSpecification" parameterType="com.square.mall.item.center.service.eo.SpecificationEo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO it_specification (`id`, `name`, `create_time`, `update_time`)
        VALUES (#{id}, #{name}, now(), now())
    </insert>

    <insert id="updateSpecification" parameterType="com.square.mall.item.center.service.eo.SpecificationEo">
        UPDATE it_specification SET
        <if test="name != null and name !=''">
            name = #{name},
        </if>
        update_time = now()
        WHERE id = #{id} and is_delete = 0
    </insert>

    <delete id="deleteSpecification" parameterType="Long" >
        UPDATE it_specification SET is_delete = 1 where id = #{id} and is_delete = 0;
    </delete>

    <select id="selectSpecificationByName" resultMap="SpecificationMap">
        SELECT
        <include refid="need_column"/>
        FROM it_specification WHERE name = #{name} and is_delete = 0;
    </select>

    <select id="selectSpecificationById" resultMap="SpecificationMap">
        SELECT
        <include refid="need_column"/>
        FROM it_specification WHERE id = #{id} and is_delete = 0;
    </select>

</mapper>

