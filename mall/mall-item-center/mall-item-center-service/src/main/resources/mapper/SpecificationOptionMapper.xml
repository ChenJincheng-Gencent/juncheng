<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.square.mall.item.center.service.dao.SpecificationOptionDao">

    <resultMap id="SpecificationOptionMap" type="com.square.mall.item.center.service.eo.SpecificationOptionEo">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sort" property="sort"/>
        <result column="spec_id" property="specId"/>
    </resultMap>

    <sql id="need_column">
        `id`,
        `name`,
        `sort`,
        `spec_id`
    </sql>

    <!-- 动态查询 -->
    <sql id="select">
        <where>
            is_delete = 0
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name !=''">
                and name = #{name}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="specId != null">
                and spec_id = #{specId}
            </if>
        </where>
    </sql>

    <select id="selectSpecificationOptionByCondition" resultMap="SpecificationOptionMap">
        SELECT
        <include refid="need_column"/>
        FROM it_specification_option <include refid="select"/>
    </select>

    <insert id="insertSpecificationOption" parameterType="com.square.mall.item.center.service.eo.SpecificationOptionEo"
        useGeneratedKeys="true" keyProperty="id">
        INSERT INTO it_specification_option (`id`, `name`, `sort`, `spec_id`, `create_time`, `update_time`)
        VALUES (#{id}, #{name}, #{sort}, #{specId}, now(), now())
    </insert>

    <insert id="updateSpecificationOption" parameterType="com.square.mall.item.center.service.eo.SpecificationOptionEo">
        UPDATE it_specification_option SET
        <if test="name != null and name !=''">
            name = #{name},
        </if>
        <if test="sort != null">
            sort = #{sort},
        </if>
        <if test="specId != null">
            spec_id = #{specId},
        </if>
        update_time = now()
        WHERE id = #{id} and is_delete = 0
    </insert>

    <delete id="deleteSpecificationOption" parameterType="Long" >
        UPDATE it_specification_option SET is_delete = 1 where id = #{id} and is_delete = 0
    </delete>

    <delete id="batchDeleteSpecificationOption" parameterType="Long" >
        UPDATE it_specification_option SET is_delete = 1 where is_delete = 0 and id in
        <foreach collection="array" item="ids" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </delete>

    <select id="selectSpecificationOptionByName" resultMap="SpecificationOptionMap">
        SELECT
        <include refid="need_column"/>
        FROM it_specification_option WHERE name = #{name} and is_delete = 0;
    </select>

    <select id="selectSpecificationOptionById" resultMap="SpecificationOptionMap">
        SELECT
        <include refid="need_column"/>
        FROM it_specification_option WHERE id = #{id} and is_delete = 0;
    </select>

    <delete id="deleteSpecificationOptionBySpecId" parameterType="Long" >
        UPDATE it_specification_option SET is_delete = 1 where spec_id = #{specId} and is_delete = 0
    </delete>

</mapper>

